{
  "$id": "CurrentStateVersion",
  "type": "object",
  "properties": {
    "version": { "type": "integer" },
    "currentStateId": { "type": "string" },
    "data": {
      "type": "object",
      "properties": {
        "meetingSummary": { "type": "string" },
        "workflows": {
          "type": "array",
          "items": { "$ref": "workflow.schema.json" }
        },
        "chunkIndex": {
          "type": "integer",
          "description": "Index of the chunk that produced this version (0-based)"
        },
        "chunkText": {
          "type": "string",
          "description": "The text of the chunk that was processed"
        }
      },
      "required": ["meetingSummary", "workflows"]
    }
  },
  "required": ["version", "currentStateId", "data"]
}
